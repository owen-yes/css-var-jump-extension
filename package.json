{
  "name": "css-var-jump-extension",
  "displayName": "css-var-jump-extension",
  "description": "css jump for extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "CSS Var Jump",
      "properties": {
        "cssVarJump.searchPaths": {
          "type": "array",
          "default": [
            "**/theme/**/*.{js,jsx,ts,tsx}"
          ],
          "description": "搜索变量定义的路径模式"
        },
        "cssVarJump.cssSearchPaths": {
          "type": "array",
          "default": [
            "**/theme/**/*.css",
            "**/theme/**/*.less"
          ],
          "description": "搜索CSS变量定义的路径模式"
        }
      }
    },
    "commands": [
      {
        "command": "css-var-jump-extension.typexCssVarJump",
        "title": "Typex Css Var Jump"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
